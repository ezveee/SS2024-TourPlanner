<UserControl x:Class="UI.UIComponents.TourControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.UIComponents"
             xmlns:tourlist="clr-namespace:UI.UIComponents.TourList"
             xmlns:tourdetails="clr-namespace:UI.UIComponents.TourDetails"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!--TOURS-->
        <DockPanel Grid.Column="0">
            <tourlist:TourListControls/>
        </DockPanel>

        <!--TOUR DETAILS-->
        <DockPanel Grid.Column="1">
            <tourdetails:TourDetailsControls/>
        </DockPanel>
    </Grid>
</UserControl>
