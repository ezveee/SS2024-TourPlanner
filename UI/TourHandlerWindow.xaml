<Window x:Class="UI.TourHandlerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:components="clr-namespace:UI.View.AddTourWindowComponents"
        xmlns:viewmodel="clr-namespace:UI.ViewModel"
        mc:Ignorable="d"
        Title="Add Tour" Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:TourHandlerViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!--INPUT FIELDS-->
        <DockPanel Grid.Row="0" VerticalAlignment="Top">
            <components:TourInputFieldsControls/>
        </DockPanel>

        <!--BUTTONS-->
        <DockPanel Grid.Row="1">
            <components:ConfirmButtonControls/>
        </DockPanel>
    </Grid>
</Window>
